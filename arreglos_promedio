#include "stdafx.h"
#include <iostream> 
#include "conio.h"
#define MAX 100;
using namespace std;

double promedio(double a[], int tamanio);


int main(){
  double x[5];
  cout<<"\tIngrese 5 valores)"<<endl;
  for (int i=0;i<5;i++)
  {cout<<"Valor: "<<endl;
  cin>>x[i];}
  cout<<"El promedio es: "<<promedio(x,5);
  getch();
  return 0;
}
  
double promedio(double a[], int tamanio){
  double suma = 0;
  for(int i=0; i<tamanio; i++)
    suma += a[i];
  return suma/tamanio;
}
