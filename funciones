#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

float vCilindro (float r, float a);
int main ()
{ float volumen, radio, altura;
  cout<<"Ingrese el radio de la figura: "<<endl;
  cin>>radio;
  cout<< "Ingrese la altura de la figura: "<<endl;
  cin>>altura;
  volumen=vCilindro(radio,altura);
  cout<<"El volumen es: "<<volumen;
  getch ();
  return 0;
}
float vCilindro (float r, float a)
{
	float vol, pi=3.141516;
	vol=pi*r*r*a;
	return vol;
}
