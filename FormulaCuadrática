// ecuacioncuadratica.cpp : main project file.

#include <iostream>
#include "conio.h"
#include "conio.h"
#include "math.h"

using namespace std;

int main()
{
    float a,b,c,d,x1,x2,xr,xi,x;
	cout<< "Calculo de la ecuaci칩n cuadr치tica"<<endl;
	cout<< " Ingresar a: ";
	cin>>a;
	cout<< " Ingresar b: ";
	cin>>b;
	cout<< " Ingresar c: ";
	cin>>c;
	if (a!=0) // a diferente de 0
	{ 
		d=pow(b,2)-4*a*c;
		if (d==0)
			cout<< "Soluci칩n unica: "<<-b/(2*a);
		else
			if (d>0)
			{
				x1=(-b+sqrt(d))/(2*a);
				x2=(-b-sqrt(d))/(2*a);
				cout<< "Soluciones reales: x1= "<<x1<<"   x2= "<<x2;
			}
		
			else
			{
			    xr=-b/(2*a);
			    xi=sqrt(-d)/(2*a);
			    cout<< "Soluciones imaginarias: " <<endl;
			   cout<< "x1= "<<xr<< " + " << xi<<"i"<< endl;
			   cout<< "x2= "<<xr<< " - " << xi<<"i";
			}
	}
	else
	cout<< "No tiene soluci칩n";



    return 0;
}
