#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main()
{
    int x,z;
    cout<< "CÁLCULO DE VALOR ABSOLUTO"<<endl;
    cout<< "Ingresar el número: ";
    cin>>x;
    if (x>=0)
    {
      z=x;
      cout<< "El valor absoluto es "<<z<<endl;
    }
      else
      {
      z=-x;
      cout<< "El valor absoluto es: "<<z<<endl;
      }
    return 0;
}
