void cargarVector(int vecX[],int x){
	
	for (int i=0;i<x;i++){
		cout<<"Ingrese el valor en la posicion vec["<<i<<"]:";
		cin>>vecX[i];
}
}

void MostrarVector(int vecX[], int x){
	for (int i=0;i<x;i++){
		cout<<"vec["<<i<<"]="<<vecX[i]<<endl;}
}

